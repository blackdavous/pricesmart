# ==============================================
# LOUDER - Variables de Entorno
# ==============================================
# Copiar este archivo a .env y llenar con valores reales

# ==============================================
# DATABASE
# ==============================================
# Para desarrollo local con SQLite (sin instalación de PostgreSQL)
DATABASE_URL=sqlite:///./louder_pricing.db

# Para producción con PostgreSQL (comentado por ahora)
# DATABASE_URL=postgresql://louder_user:louder_password@localhost:5432/louder_db
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ==============================================
# REDIS (OPCIONAL para desarrollo)
# ==============================================
# Si no tienes Redis instalado, el sistema funcionará sin cache
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False
REDIS_CACHE_TTL=3600

# ==============================================
# MERCADO LIBRE API - NUEVA CONFIGURACIÓN
# ==============================================
# IMPORTANTE: Actualizar con las credenciales de la nueva API
# cuando estén disponibles. Las credenciales actuales son de prueba.

# Credenciales de la nueva API (actualizar cuando estén listas)
ML_CLIENT_ID=tu_nuevo_client_id_aqui
ML_CLIENT_SECRET=tu_nuevo_client_secret_aqui
ML_REDIRECT_URI=https://tu-dominio.com/callback
ML_COUNTRY=MX
ML_RATE_LIMIT_PER_HOUR=5000

# Enable/Disable ML API - Cambiar a True cuando la nueva API esté configurada
ML_API_ENABLED=False

# ==============================================
# OPENAI API
# ==============================================
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-org-id-optional

# Modelos a usar
OPENAI_MODEL_MINI=gpt-4o-mini
OPENAI_MODEL_FULL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==============================================
# APPLICATION
# ==============================================
APP_NAME=Louder Pricing Intelligence
APP_VERSION=1.0.0
SECRET_KEY=your-super-secret-key-change-this-in-production
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend
FRONTEND_PORT=8501

# ==============================================
# CELERY
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=False

# ==============================================
# SCANS CONFIGURATION
# ==============================================
# Horarios de scans automáticos (formato cron)
SCAN_FULL_SCHEDULE=0 2 * * *           # Daily at 2 AM
SCAN_PRIORITY_SCHEDULE=0 */6 * * *     # Every 6 hours
SCAN_FLASH_SCHEDULE=0 */1 * * *        # Every hour

# Límites
MAX_COMPETITORS_PER_PRODUCT=50
MIN_SIMILARITY_SCORE=0.65
DEFAULT_TARGET_PERCENTILE=50

# ==============================================
# MONITORING
# ==============================================
# Sentry (opcional)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# EMAIL NOTIFICATIONS (opcional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@louder.com
EMAIL_ALERTS_TO=admin@louder.com

# ==============================================
# SLACK NOTIFICATIONS (opcional)
# ==============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==============================================
# PRICING RULES
# ==============================================
# Margen mínimo permitido (%)
MIN_MARGIN_PERCENT=20

# Cambio máximo automático sin aprobación (%)
MAX_AUTO_PRICE_CHANGE_PERCENT=10

# Confianza mínima para aplicación automática (0-100)
MIN_CONFIDENCE_AUTO_APPLY=85

# ==============================================
# DEVELOPMENT
# ==============================================
# Activar para desarrollo local
RELOAD_ON_CHANGE=True
SHOW_SQL_QUERIES=False
